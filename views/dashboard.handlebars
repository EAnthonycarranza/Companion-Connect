<!-- CompanionConnect/views/dashboard.handlebars -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg mb-5">
                <div class="card-header bg-primary text-white">
                    <h4>Welcome to Your Dashboard</h4>
                </div>
                <div class="card-body">
                    <h5>Hello, {{username}}!</h5>
                    <p class="lead">Here, you can view your pet images and select settings.</p>
                    <div class="list-group mb-4">
                        <a href="/your-pets" class="list-group-item list-group-item-action">Your Pets</a>
                        <a href="/account-settings" class="list-group-item list-group-item-action">Account Settings</a>
                        <a href="/api/users/logout" class="list-group-item list-group-item-action text-danger">Logout</a>
                    </div>
                </div>
            </div>

            <!-- Separate Box for Uploaded Pet Photos -->
            <div class="card shadow-lg">
                <div class="card-header bg-secondary text-white">
                    <h4>Your Uploaded Pets</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        {{#if petPhotos}}
                            {{#each petPhotos}}
                                <div class="col-md-4 mb-4 d-flex flex-column align-items-center">
                                    <img src="{{image_url}}" alt="Pet Photo" class="img-fluid rounded mb-2">
                                    <button data-id="{{id}}" class="btn btn-danger btn-sm delete-photo-btn mt-auto">Delete</button>
                                </div>
                            {{/each}}
                        {{else}}
                            <p class="col-12">You haven't uploaded any pet photos yet.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/dashboard.js"></script>
</div>

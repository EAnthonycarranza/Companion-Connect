<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-5">
        <div class="card-header bg-primary text-white">
          <h4>Upload Your Pet Photo</h4>
        </div>
        <div class="card-body">
          <form action="/upload" method="POST" enctype="multipart/form-data" id="uploadForm">
            <div class="mb-3">
              <label for="petPhoto" class="form-label">Select a photo of your pet:</label>
              <input type="file" class="form-control" id="petPhoto" name="petPhoto" accept="image/*" required>
              <p id="error-message" class="mt-2" style="color:red;"></p>
            </div>
            <div class="mb-3">
              <label for="petName" class="form-label">Pet Name:</label>
              <input type="text" class="form-control" id="petName" name="petName" required>
            </div>
            <div class="mb-3">
             <label for="age" class="form-label">Age (in years):</label>
             <input type="number" class="form-control" id="age" name="age" required min="0" max="99" placeholder="Enter age in years">
            </div>
            <div class="mb-3">
              <label for="location" class="form-label">Location:</label>
              <input type="text" class="form-control" id="location" name="location" required>
            </div>
            <div class="mb-3">
              <label for="breed" class="form-label">Breed:</label>
              <input type="text" class="form-control" id="breed" name="breed" required>
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">About:</label>
              <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-success">Upload & Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('petPhoto').addEventListener('change', function() {
        const MAX_SIZE_MB = 1;
        const MAX_SIZE_BYTES = MAX_SIZE_MB * 1024 * 1024; // 1MB in bytes

        if (this.files[0].size > MAX_SIZE_BYTES) {
            document.getElementById('error-message').textContent = `File size should be less than ${MAX_SIZE_MB}MB`;
            this.value = ''; // clear the input
        } else {
            document.getElementById('error-message').textContent = ''; // clear error message
        }
    });

    // Prevent the form submission if there's an error
    document.getElementById('uploadForm').addEventListener('submit', function(event) {
        if (document.getElementById('error-message').textContent !== '') {
            event.preventDefault();
        }
    });
  </script>
</div>

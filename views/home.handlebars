<!-- CompanionConnect/views/home.handlebars -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-5">
        <div class="card-header">
          <h4>Welcome to Our Pet Adoption Website!</h4>
        </div>
        <div class="card-body">
          <p>Find your perfect furry companion today.</p>
          <p>Our website connects you with pets looking for their forever homes.</p>
          <p>Search for pets based on breed, age, location, and more.</p>

          {{#if isAuthenticated}}
            <!-- If the user is authenticated (logged in), show the anchor tag for the dashboard -->
            <a href="/dashboard" class="btn btn-primary">Get Started</a>
          {{else}}
            <!-- If the user is not authenticated (not logged in), show the anchor tag for the login page -->
            <a href="/login" class="btn btn-primary">Get Started</a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

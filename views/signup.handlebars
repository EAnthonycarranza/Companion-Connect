<head>
  <!-- Include other head elements -->
  <link rel="stylesheet" type="text/css" href="../public/css/signup.css">
</head>

<script src="../public/js/signup.js"></script>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Sign Up</h3>
        </div>
        <div class="card-body">
          <form action="/api/users/signup" method="POST">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </form>
          <p class="mt-3">Already have an account? <a href="/login">Login</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

  {{!-- Add this block to show the animation when signup is complete --}}
{{#if signupComplete}}
  <div class="signup-animation" id="signup-animation" data-signup-complete="{{signupComplete}}">
    <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
      <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none"/>
      <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
    </svg>
    <div class="message">Signup complete!</div>
  </div>
{{/if}}


  <!-- Include your JavaScript file(s) here -->
</body>
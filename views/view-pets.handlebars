<!-- CompanionConnect/views/view-pets.handlebars -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8"> <!-- Adjust for small devices -->
      <div class="card shadow-lg mt-5"> <!-- Add shadow for a lifted effect -->
        <div class="card-header bg-primary text-white">
          <h4>View All Pets Here!</h4>
        </div>
        <div class="card-body pb-4">
          {{#if petPhotos.length}}
            <div class="row">
              {{#each petPhotos}}
<div class="col-12 col-lg-6 mb-5">
  <div class="card shadow"> <!-- Add shadow for a lifted effect -->
      <div class="image-container text-center pt-4">
          <img src="{{image_url}}" class="card-img-top img-fluid img-thumbnail mx-auto d-block" alt="Pet Photo">
      </div>
      
      <div class="text-content flex-grow-1 d-flex flex-column justify-content-center align-items-center p-3"> <!-- Add padding inside the card -->
          <h5 class="card-title font-weight-bold mb-2">{{pet_name}}</h5> <!-- Make pet name bold and a bit spaced -->
          <p class="card-text mb-1"><strong>Age:</strong> {{age}} old</p> <!-- Make key labels bold -->
          <p class="card-text mb-1"><strong>Location:</strong> {{location}}</p>
          <p class="card-text mb-1"><strong>Breed:</strong> {{breed}}</p>
          <p class="card-text mb-2"><strong>About:</strong> {{message}}</p>
      </div>
  </div>

  <div class="mt-3 p-3 bg-light rounded shadow"> <!-- Add a background to differentiate comments and main card, and add some padding and shadow -->
    {{#if this.comments}}
      <p><strong>Comments</strong></p> 
        <ul class="list-unstyled">
          {{#each this.comments}}
            <li class="mt-2">
              {{this.content}}
              {{#if (and (isCommentOwner this.user_id currentUser.id))}}
                <form action="/delete-comment/{{this.id}}" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              {{/if}}
            </li>
          {{/each}}
        </ul>
    {{else}}
      <p>No comments available.</p>
    {{/if}}

    <form action="/submit-comment/{{id}}" method="POST">
      <textarea class="form-control mt-2" name="comment" placeholder="Add a comment..."></textarea>
      <button type="submit" class="btn btn-primary mt-2">Submit Comment</button>
    </form>
  </div>
</div>
              {{/each}}
            </div>
          {{else}}
            <p class="text-center">No pet photos found.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
